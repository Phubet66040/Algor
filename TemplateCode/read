                                          Sort
-----------------------------------------------------------------------------------------
void sort(int a[], int n) {
    if (n == 1) {
        return;
    }
    for (int i = 0; i < n - 1; i++) {
        if (a[i] > a[i + 1]) {
            swap(a[i], a[i + 1]);
        }
    }
    sort(a, n - 1);
}
-----------------------------------------------------------------------------------------
                                          Max
-----------------------------------------------------------------------------------------
int max(int a[], int n) {
    if (n == 1) {
        return a[0];
    }
    int y = max(a, n - 1);
    return (a[n-1]>y)?a[ -1]:y;
}
-----------------------------------------------------------------------------------------
                                         Sum
-----------------------------------------------------------------------------------------
int sum(int a[], int n) {
    if (n == 1) {
        return a[0];
    }
    return a[n-1] + sum(a,n-1); 
}
-----------------------------------------------------------------------------------------
